<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:id="@+id/display_title" android:layout_gravity="center_horizontal|top" android:gravity="center_horizontal|top"
            android:layout_alignParentTop="true" android:phoneNumber="true"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_image" android:cropToPadding="false"
            android:scaleType="fitCenter" android:layout_gravity="center_horizontal"
            android:layout_below="@+id/display_title" android:layout_above="@+id/display_description"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:id="@+id/display_description" android:layout_gravity="center_horizontal|bottom" android:gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true" android:phoneNumber="true"/>
</RelativeLayout>